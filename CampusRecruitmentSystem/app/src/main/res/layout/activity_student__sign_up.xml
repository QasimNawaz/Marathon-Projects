<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student__sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ede9ff"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.qasimnawaz.campusrecruitmentsystem.Student_SignUp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">

        <EditText
            android:id="@+id/std_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/std_last_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:id="@+id/maleChkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/femaleChkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/std_get_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/std_get_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact No"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/std_get_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/std_get_SSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SSC %"
                android:inputType="number"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/sscSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:entries="@array/year_arrays"
                android:gravity="center_vertical"
                android:prompt="@string/year_prompt"
                android:textAlignment="center" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/std_get_FSC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FSC %"
                android:inputType="number"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/fscSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:entries="@array/year_arrays"
                android:gravity="center_vertical"
                android:prompt="@string/year_prompt"
                android:textAlignment="center" />
        </RelativeLayout>

        <EditText
            android:id="@+id/std_get_uni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="University"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/dptSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/department_arrays"
            android:prompt="@string/department_prompt" />

        <EditText
            android:id="@+id/std_get_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/std_get_cunformPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cunform Password"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <Button
            android:id="@+id/student_signUp_button"
            android:layout_width="130dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:background="#5c5c5c"
            android:layout_height="wrap_content"
            android:text="Sign Up" />
    </TableLayout>
</ScrollView>
