<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_company__sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ede9ff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.qasimnawaz.campusrecruitmentsystem.Company_SignUp">

        <EditText
            android:id="@+id/cmp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Company Name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cmp_established"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmp_name"
            android:hint="Established"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cmp_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmp_established"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cmp_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmp_email"
            android:hint="Contact"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cmp_HR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmp_contact"
            android:hint="HR"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cmp_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmp_HR"
            android:hint="User Name"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cmp_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmp_userName"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/cmp_cunform_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmp_password"
            android:hint="Cunform Password"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cmp_signUp_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#5c5c5c"
            android:text="Sign up"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

</ScrollView>
